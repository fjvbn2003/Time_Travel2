<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/list_view_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </LinearLayout>

    <include
        layout="@layout/setting_menu1"
        android:id="@+id/sub1" />

    <include
        layout="@layout/setting_menu2"
        android:id="@+id/sub2" />

    <include
        layout="@layout/setting_menu3"
        android:id="@+id/sub3" />

    <include
        layout="@layout/setting_menu4"
        android:id="@+id/sub4"/>

    <include
        layout="@layout/setting_menu1_2"
        android:id="@+id/sub1_2"/>

</android.support.constraint.ConstraintLayout>